<PropertyList>

 <!--
   x/y/z == back/left/up
   Coordinate system origin at the 3d model origin, i.e. at the FDM origin.
 -->

 <fx>

  <!-- ========================================================================
    Water sounds. Depends on the c172p.
  -->
  <hull-in-water>
   <name>hull-in-water</name>
   <mode>looped</mode>
   <path>Aircraft/c172p/Sounds/water-still.wav</path>
   <condition>
    <greater-than>
     <property>/fdm/jsbsim/hydro/v-kt</property>
     <value>0</value>
    </greater-than>
   </condition>
   <position>
    <x>12.0</x>
    <y>0.0</y>
    <z>0.5</z>
   </position>
   <reference-dist>5.0</reference-dist>
   <max-dist>25.0</max-dist>
   <volume>
    <offset>0.3</offset>
   </volume>
  </hull-in-water>

  <at-speed-in-water>
   <name>at-speed-in-water</name>
   <mode>looped</mode>
   <path>Aircraft/c172p/Sounds/water-fast.wav</path>
   <condition>
    <greater-than>
     <property>/fdm/jsbsim/hydro/v-kt</property>
     <value>4</value>
    </greater-than>
   </condition>
   <position>
    <x>6.0</x>
    <y>0.0</y>
    <z>0.5</z>
   </position>
   <reference-dist>15.0</reference-dist>
   <max-dist>50.0</max-dist>
   <volume>
    <property>/fdm/jsbsim/hydro/v-kt</property>
    <factor>0.05</factor>
    <offset>0.1</offset>
    <min>0.1</min>
    <max>2.0</max>
   </volume>
  </at-speed-in-water>

 </fx>

</PropertyList>
